<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            android:layout_marginHorizontal="8dp">

            <!-- Replace static image with actual Google Map -->
            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            
            <!-- Zoom Controls Overlay -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical"
                    android:background="@drawable/zoom_controls_background"
                    android:padding="8dp">
                    
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnZoomIn"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="+"
                        android:textSize="24sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/zoom_button_background"
                        android:elevation="6dp"
                        android:shadowColor="#000000"
                        android:shadowDx="0"
                        android:shadowDy="3"
                        android:shadowRadius="6"
                        android:stateListAnimator="@null"
                        app:rippleColor="#FFFFFF" />
                    
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnZoomOut"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="−"
                        android:textSize="24sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/zoom_button_background"
                        android:elevation="6dp"
                        android:shadowColor="#000000"
                        android:shadowDx="0"
                        android:shadowDy="3"
                        android:shadowRadius="6"
                        android:stateListAnimator="@null"
                        app:rippleColor="#FFFFFF" />
                </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Fancy Menu Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="8dp"
            android:background="@drawable/menu_gradient_background"
            android:layout_marginHorizontal="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddLocation"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="📍 Add New Location"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="30dp"
                    android:backgroundTint="#4CAF50"
                    android:textColor="@android:color/white"
                    android:elevation="4dp"
                    app:iconPadding="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLocation"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="🏛️ Location Profile"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="30dp"
                    android:backgroundTint="#FF9800"
                    android:textColor="@android:color/white"
                    android:elevation="4dp"
                    app:iconPadding="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReportConditions"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="📊 Report Conditions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp"
                    android:backgroundTint="#F44336"
                    android:textColor="@android:color/white"
                    android:elevation="4dp"
                    app:iconPadding="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>